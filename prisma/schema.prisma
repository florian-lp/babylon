generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model Author { // add birthday, etc..
    name  String @id
    books Book[]
}

model Reader {
    id           String   @id @default(cuid())
    firstName    String
    lastName     String
    email        String   @unique
    passwordHash String
    reviews      Review[]
    readBooks    Book[]
    friends      Reader[] @relation("friends")
    friendOf     Reader[] @relation("friends")
}

model Genre {
    id    String @id
    name  String
    books Book[]
}

model Book {
    id          String   @id
    title       String
    authorName  String
    author      Author   @relation(fields: [authorName], references: [name])
    description String   @db.Text
    releaseDate DateTime
    genreId     String
    genre       Genre    @relation(fields: [genreId], references: [id])
    rating      Int
    ratings     Int
    pages       Int
    language    String
    reviews     Review[]
    readers     Reader[]

    @@index([releaseDate])
    @@index([rating])
}

model Review {
    id        Int      @id @default(autoincrement())
    bookId    String
    book      Book     @relation(fields: [bookId], references: [id])
    rating    Int
    text      String?  @db.Text
    timestamp DateTime @default(now())
    readerId  String
    reader    Reader   @relation(fields: [readerId], references: [email])

    @@index([timestamp])
}
