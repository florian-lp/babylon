generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model Author {
    id          String    @id
    name        String
    fullName    String
    born        DateTime
    died        DateTime?
    nationality String
    books       Book[]
}

model Reader {
    id           String   @id @default(cuid())
    firstName    String
    lastName     String
    email        String   @unique
    passwordHash String
    reviews      Review[]
    readBooks    Book[]
    friends      Reader[] @relation("friends")
    friendOf     Reader[] @relation("friends")
    admin        Boolean  @default(false)
}

model Genre {
    id    String @id
    name  String
    books Book[]
}

enum BookType {
    paperback
    hardcover
    ebook
}

model BookEdition {
    id        String   @id
    type      BookType
    published DateTime
    pages     Int
    language  String
    cover     String   @default("") @db.Text
    bookId    String
    editionOf Book     @relation(fields: [bookId], references: [id])
}

model Book {
    id          String        @id
    title       String
    description String        @db.Text
    published   DateTime
    cover       String        @default("") @db.Text
    authorId    String
    author      Author        @relation(fields: [authorId], references: [id])
    genreId     String
    genre       Genre         @relation(fields: [genreId], references: [id])
    rating      Float         @default(0)
    reviews     Review[]
    readers     Reader[]
    editions    BookEdition[]

    @@index([published])
    @@index([rating])
}

model Review {
    id        Int      @id @default(autoincrement())
    bookId    String
    book      Book     @relation(fields: [bookId], references: [id])
    rating    Int      @db.SmallInt
    text      String?  @db.Text
    timestamp DateTime @default(now())
    readerId  String
    reader    Reader   @relation(fields: [readerId], references: [id])

    @@index([timestamp])
}

model BookRequest {
    id   Int  @id @default(autoincrement())
    data Json
}
